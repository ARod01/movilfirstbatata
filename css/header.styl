header
    position: relative
    width: 100%
    min-width: 320px
    height: 340px
    content()
    background: linear-gradient(45deg, rgba(247,147,26,1) 0%, rgba(252,176,69,1) 30%, rgba(32,30,28,1) 99%)
    img
        width: 152px
        height 24px
        margin-top: 50px
        margin-bottom: 47px
        align-self: center
    div
        width: 100%
        margin: 0 auto
        padding: 0 10%
        text-align: center
        h1
            height: 75px
            margin-bottom: 45px
            font-size: 24px
            line-height: 26px
            color: #FFFFFF
        p
            height: 30px
            font-size: 14px
            color: text-orange
            margin-bottom: 45px
        a
            position: absolute
            width: 230px
            height: 50px
            padding: 15px 15px
            border: none
            border-radius: 5px
            box-shadow: 0px 4px 8px 0px #59491E29;
            background-color: color-primary
            left: calc(50% - 115px)
            font-size: 14px
            text-decoration: none
            color: #000000
            font-weight: bold
            span
                display: inline-block
                width: 10px
                height: 10px
                margin-left: 15px
                backgroundImage("../assets/icons/vector.png")


        
color-primary = #FAF8F7
color-secundary = #F7931A
blacktwo = #282623
blackone = #201E1C
text-grey = #757575
text-orange = #FFE9D5
size-base = 14px

content()
    display: flex
    flex-direction: column
    align-items: center
    text-align: center

display-grid()
    display: grid
    width: 100%
    grid-template-rows: repeat(4, 40px)
    background-color: #FFFFFF

title(textcolor)
    padding-left: 10px
    width 100%
    font-size: 18px
    color: textcolor
    text-align: start

update(backgroundColor)
    padding: 5px
    margin: 20px auto 40px
    font-size: 12px
    background-color: backgroundColor 
    span
        font-weight: normal

name()
    padding-left: 10px
    text-align: start
    align-self: center;
    color: text-grey
    font-size: 16px

price()
    align-self: center;
    color: text-grey
    font-size: 14px

trending(trending)
    width: 20px
    height 20px
    justify-self: center
    align-self: center;
    backgroundImage(trending)

backgroundImage(image)
    background-image: url(image)
    background-position: center
    background-repeat: no-repeat
    background-size: contain

*
    padding: 0
    margin: 0
    box-sizing: border-box

html
    font-size: 62.5%
    font-family: 'DM Sans', sans-serif